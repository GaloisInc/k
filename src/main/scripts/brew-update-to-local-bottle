#!/bin/sh -ex
REV=$(cd .. && git rev-parse HEAD)
brew bottle --json kframework --root-url="https://github.com/kframework/k/releases/download/nightly-$REV/"
brew bottle --merge --write --no-commit *.bottle.json
filename=$(cat *.bottle.json | jq -r '.kframework.bottle.tags.mojave.filename')
localfilename=$(cat *.bottle.json | jq -r '.kframework.bottle.tags.mojave.local_filename')
mv $localfilename $filename
cp $(brew formula kframework) Formula/kframework.rb
git commit Formula/kframework.rb -m "Update kframeork to $REV: part 2"
